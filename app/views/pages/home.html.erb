<div class="flex">
  <h1 class="text-3xl font-bold underline text-center mt-8 mb-4">
      Hello world!
  </h1>
  <div class="flex justify-center ml-10">
    <% if current_user %>
      <%= link_to "Start Chatting", rooms_path %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded mr-4 text-center" %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mr-4 text-center" %>
      <%= link_to "Login", new_user_session_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded text-center" %>
    <% end %>
  </div>
</div>
